<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title or metadata.title }}</title>
    <meta name="description" content="{{ description or metadata.description }}">
    <meta name="robots" content="index,follow">
    <link rel="stylesheet" href="{{ '/assets/styles/main.css' | url }}">
    <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">
    <link rel="alternate" href="{{ metadata.jsonfeed.path | url }}" type="application/json" title="{{ metadata.title }}">
    <link rel="icon" type="image/ico" sizes="32x32" href="{{ "/assets/images/favicon.ico" | url }}">
  </head>
  <body>
    <div class="nav-container">
      <nav>
        <a href="{{ '/' | url }}" class="nav-container__logo">{% include '../../assets/images/logo.svg' %}</a>
        <ul class="nav">
        {%- for entry in collections.all | eleventyNavigation %}
          <li class="nav-item{% if entry.url == page.url %} nav-item-active{% endif %}"><a href="{{ entry.url | url }}">{{ entry.title }}</a></li>
        {%- endfor %}
        </ul>
      </nav>
    </div>

    {% block header %}
      <div class="hero">
        <div class="hero-inner">
          <h1>Hi, I'm Jonathan ðŸ‘‹</h1>
          <p>
            I'm a software engineer from Australia, who loves creating cool stuff.
            I write about my developer journey, and any interesting technology I'm using.
          </p>
          <p class="hero-inner__social-icons">
            <a href="mailto:hello@jonathanyeong.com" class="u-mr1">{% include '../../assets/icons/envelope.svg' %}</a>
            <a href="https://github.com/jonathanyeong" class="u-mr1">{% include '../../assets/icons/github.svg' %}</a>
            <a href="https://www.instagram.com/jonathan.yeong/" class="u-mr1">{% include '../../assets/icons/instagram.svg' %}</a>
            <a href="https://www.linkedin.com/in/jonathan-yeong" class="u-mr1">{% include '../../assets/icons/linkedin.svg' %}</a>
            <a href="https://twitter.com/JonoYeong">{% include '../../assets/icons/twitter.svg' %}</a>
          </p>
        </div>
        <a href="#recentArticles" class="hero-circle">
          {% include '../../assets/icons/arrow.svg' %}
        </a>
      </div>
    {% endblock %}

    <main id="recentArticles" {% if templateClass %} class="{{ templateClass }}"{% endif %}>
      {% block content %}
        {{ content | safe }}
      {% endblock %}
    </main>

    <footer></footer>

    <!-- Current page: {{ page.url | url }} -->
  </body>
</html>
